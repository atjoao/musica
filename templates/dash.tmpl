{{ template "header" . }}

<div class="pagecontent" id="page">
    <div class="sidebar" id="sidebar"></div>

    <div class="main-content" id="main">
        <div class="top">
            <input type="search" name="" id="searchForm" placeholder="Search for a song">
            <p>{{ .username }}</p>
        </div>

        <section class="content" id="content" style="overflow: auto;">
            <div id="initial">
                <h1>Recently Played</h1>
            </div>
            <div id="search" class="hidden">
            </div>
            <div id="playlist" class="hidden" ></div>
        </section>

    </div>
</div>

<div class="player">
    <div class="line"></div>
    <div class="player-content" style="display: flex; justify-content: space-between;height: 100%;align-items: center;padding: 10px;">
        <div style="display: flex; gap: 10px; align-items: center;">
            <img id="player-image" style="object-fit: cover;" src="" alt="" width="64px" height="64px">
            <div>
                <p id="player-title"></p>
                <p id="player-author"></p>
            </div>
        </div>
        <div>
            <span>repeat</span>
            <span>back</span>
            <span>pause/play</span>
            <span>next</span>
            <span>shuffle</span>    
        </div>
        <div>
            <input type="range" id="volumeSlider">
        </div>
    </div>
</div>

<script src="/assets/js/main.js"></script>
<script src="/assets/js/audio.js"></script>
{{ template "eop" . }}